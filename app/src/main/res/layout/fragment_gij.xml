<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBai"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.example.mylocation.utils.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleText="工模"
        app:titleSize="8dp"
        app:titleColor="#FFFFFF"
        />
        <RelativeLayout
        android:background="@color/colorBai"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:id="@+id/v1"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent">
        </View>
        <RelativeLayout
            android:layout_marginRight="@dimen/x50"
            android:id="@+id/re_SimI1"
            android:layout_toLeftOf="@+id/v1"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/colorJigTextColorCancel"
                android:id="@+id/tv_SimI1"
                android:text="手机卡槽1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:id="@+id/iv_scrollbar1"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/scrollbar"
                android:layout_width="30dp"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_SimI2"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/colorJigTextColorCancel"
                android:id="@+id/tv_SimI2"
                android:text="手机卡槽2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:id="@+id/iv_scrollbar2"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/scrollbar"
                android:layout_width="30dp"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/re_Device"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/colorJigTextColorCancel"
                android:id="@+id/tv_Device"
                android:text="设备"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:id="@+id/iv_scrollbar3"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/scrollbar"
                android:layout_width="30dp"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:background="@color/colorBg"
        android:id="@+id/Vp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>